
@{
    ViewBag.Title = "Donations";
}

<!-- Header -->
<a name="about"></a>
<div class="intro-header">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="intro-message">
                    <!-- LOLA Logo-->
                    <img src="~/img/logo.png" id="homelogo" />
                    <hr class="intro-divider">
                    <h1>Donate to LOLA!</h1>
                </div>
            </div>
        </div>
    </div>
    <!-- /.container -->
</div>
<!-- /.intro-header -->

<div class="container">

    <h1>About Donations</h1>
    <!-- About Donations-->
    <div class="col-sm-12">
        <p class="largetext">LOLA is a 501(c)(3) Non-profit organization and all donations are tax deductible.</p>
        <p>We invite you to join us in working towards achieving our goals, so that you may share in the pleasure this 
        enrichment promises for our community.</p>
    </div>
    <!-- End of About Donations -->

    <div class="largespacer"></div>

    <!-- Donation Table -->
    <div class="col-lg-6">
        <table class="table table-striped table-condensed">
            <thead>
                <tr>
                    <th>Supporting Levels</th>
                    <th>Amount</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Arts Enthusiast - Individual</td>
                    <td>$25.00</td>
                </tr>
                <tr>
                    <td>Arts Enthusiast - Family</td>
                    <td>$50.00</td>
                </tr>
                <tr>
                    <td>Business</td>
                    <td>$70.00</td>
                </tr>
                <tr>
                    <td>Donor</td>
                    <td>$100.00</td>
                </tr>
                <tr>
                    <td>Patron</td>
                    <td>$250.00</td>
                </tr>
                <tr>
                    <td>Sponsor</td>
                    <td>$500.00</td>
                </tr>
                <tr>
                    <td>Benefactor - with this donation you will receive a 
                    beautiful print that is signed and numbered.</td>
                    <td>$1000.00</td>
                </tr>
                <tr>
                    <td>Pledging Benefactor - make a 3 to 5 year pleage of
                    a chosen amount.</td>
                    <td>-</td>
                </tr>
            </tbody>
        </table>
    </div>
    <!-- End of Donation Table -->

    <div class="col-sm-6">
        <p>Donations and Pledges may be made out to Land O 'Lakes Area Artisans, Inc. and mailed to:</p>
        <p class="tabin">LOLA - P.O. Box 981</p>
        <p class="tabin">Land O' Lakes, WI 54540</p>
    </div>

    <div class="col-sm-6 largespacer">
        <p>For online donations, click the button below!</p>
        <div class="smallspacer"></div>
        <button type="button" class="btn btn-default">Click here for online Donations!</button>
    </div>
</div>


